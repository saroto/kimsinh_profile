<script type="module">
  // ...existing code...
  const links = Array.from(document.querySelectorAll("[data-section-link]"));
  function setActive() {
    const hash = location.hash || "#about";
    links.forEach((l) => {
      const isActive = l.getAttribute("href") === hash;
      l.classList.toggle("bg-[rgba(0,255,65,0.12)]", isActive);
      l.classList.toggle("text-[#00ff41]", isActive);
      l.classList.toggle("font-semibold", isActive);
      l.setAttribute("aria-current", isActive ? "page" : "");
    });
  }
  window.addEventListener("hashchange", setActive);
  window.addEventListener("load", setActive);
  links.forEach((l) =>
    l.addEventListener("click", () => setTimeout(setActive, 50))
  );
</script>

